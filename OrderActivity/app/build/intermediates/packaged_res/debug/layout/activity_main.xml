<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/donut_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="24dp"
        android:onClick="OnClick"
        android:src="@drawable/donut_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/froyo_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/froyo_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_marginTop="24dp"
        android:onClick="OnClick"
        android:src="@drawable/froyo_circle"
        app:layout_constraintLeft_toRightOf="@+id/donut_image"
        app:layout_constraintRight_toLeftOf="@+id/icecream_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icecream_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:onClick="OnClick"
        android:src="@drawable/icecream_circle"
        app:layout_constraintLeft_toRightOf="@+id/froyo_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>